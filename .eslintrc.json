{
  "extends": "next/core-web-vitals",
  "rules": {
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "import/order": [
      "warn",
      {
        "alphabetize": {
          "order": "asc"
        },
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "newlines-between": "always"
      }
    ],
    "@next/next/no-img-element": "off"
  }
}
